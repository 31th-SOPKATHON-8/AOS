<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_posting_review_user_img"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_posting_profile_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/iv_posting_review_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bubble_white"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@+id/iv_posting_review_user_img"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tv_posting_review_user_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textAppearance="@style/System2Bold"
            android:textColor="@color/grey_900"
            android:layout_marginStart="46dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@+id/iv_posting_review_bubble"
            app:layout_constraintStart_toStartOf="@+id/iv_posting_review_bubble"/>

        <TextView
            android:id="@+id/tv_posting_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="날짜"
            android:textAppearance="@style/System4Regular"
            android:textColor="@color/grey_400"
            app:layout_constraintTop_toTopOf="@+id/tv_posting_review_user_nickname"
            app:layout_constraintBottom_toBottomOf="@+id/tv_posting_review_user_nickname"
            app:layout_constraintStart_toEndOf="@+id/tv_posting_review_user_nickname"/>

        <TextView
            android:id="@+id/tv_posting_review_contents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="리뷰 내용리뷰 내용리뷰 내용리뷰리뷰 내용리뷰 내용리뷰 내 내용"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="28dp"
            android:textAppearance="@style/System3Regular"
            android:textColor="@color/grey_900"
            app:layout_constraintEnd_toEndOf="@+id/iv_posting_review_bubble"
            app:layout_constraintStart_toStartOf="@+id/tv_posting_review_user_nickname"
            app:layout_constraintTop_toBottomOf="@+id/tv_posting_review_user_nickname" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>